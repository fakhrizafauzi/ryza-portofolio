rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read all documents (public portfolio)
    // Only the admin can create, update, or delete
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == 'fakhrizafauzii@gmail.com';
    }
  }
}
