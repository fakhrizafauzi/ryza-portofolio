rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files (public portfolio assets)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == 'fakhrizafauzii@gmail.com';
    }
  }
}
